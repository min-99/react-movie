{
  "extends": "../../tsconfig.base.json",
  "include": ["src/**/*", "jest.setup.ts", "jest.config.ts"],
  "exclude": ["node_modules", "./dist"],
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "types": ["jest"],
    "baseUrl": "./",
    "composite": true
  },
  "references": [
    {
      "path": "../base"
    }
  ]
}
